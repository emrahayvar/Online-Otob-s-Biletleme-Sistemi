@model MvcOtobusBiletleme.Models.Siniflar.Musteriler
@{
    ViewBag.Title = "MusterilerGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Müşteri Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("MusterilerGuncelle", "Musteriler", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Müşteri Adı")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Soyad")
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
    <br />
    @Html.Label("Cinsiyet")
    @Html.TextBoxFor(x => x.Cinsiyet, new { @class = "form-control" })
    <br />
    @Html.Label("Doğum Tarihi")
    @Html.TextBoxFor(x => x.DogumTarih, new { @class = "form-control" })
    <br />
    @Html.Label("Şehir")
    @Html.DropDownListFor(x => x.Sehirlerid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
}