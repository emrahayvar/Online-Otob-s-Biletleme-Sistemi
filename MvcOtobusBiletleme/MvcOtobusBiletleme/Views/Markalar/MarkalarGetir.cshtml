@model MvcOtobusBiletleme.Models.Siniflar.Markalar
@{
    ViewBag.Title = "MarkalarGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Marka Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("MarkalarGuncelle", "Markalar", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.LabelFor(x => x.MarkaAd)
    @Html.TextBoxFor(x => x.MarkaAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
}