@using MvcOtobusBiletleme.Models.Siniflar;
@model List<Seferler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Sefer</th>
            <th>Kalkış Zamanı</th>
            <th>Varış Zamanı</th>
            <th>Tahmini Süre</th>
            <th>Bilet Tutar</th>
            <th>Personel</th>
            <th>Güzergah</th>
            <th>Otobüs</th>
            <th>Nereden</th>
            <th>Nereye</th>
            <th>GÜNCELLE</th>
            <th>Satılan Biletler</th>
            <th>Satış Yap</th>
        </tr>
    </thead>
    @foreach (var u in Model)
    {
<tr>
    <td>@u.SeferAd</td>
    <td>@u.KalkisZamani</td>
    <td>@u.VarisZamani</td>
    <td>@u.TahminiSure</td>
    <td>@u.BiletTutar</td>
    <td>@u.Calisanlar.Ad @u.Calisanlar.Soyad</td>
    <td>@u.Guzergah.ID</td>
    <td>@u.Otobusler.Plaka</td>
    <td>@u.KalkisSehir.KalkisSehirAd</td>
    <td>@u.VarisSehir.VarisSehirAd</td>
    <td>
        <a href="/Seferler/SeferlerGetir/@u.ID" class="btn btn-success">Güncelle</a>
    </td>
    <td>
        <a href="/Seferler/SeferlerDetay/@u.ID" class="btn btn-default" style="background-color:lightcoral;color:white;">Detaylar</a>
    </td>
    <td>
        <a href="/Seferler/SatisYap/@u.ID" class="btn btn-default" style="background-color: #0094ff; color: white">Bilet Sat</a>
    </td>
</tr>
    }
</table>
<a href="/Seferler/YeniSeferler/" class="btn btn-info">Yeni Sefer Ekle</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script>
    $('#tbl1').dataTable({});
</script>