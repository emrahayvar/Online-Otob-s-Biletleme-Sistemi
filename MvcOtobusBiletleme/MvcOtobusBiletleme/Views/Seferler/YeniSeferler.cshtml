@model MvcOtobusBiletleme.Models.Siniflar.Seferler
@{
    ViewBag.Title = "YeniSeferler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Sefer </h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Sefer Adı")
    @Html.TextBoxFor(x => x.SeferAd, new { @class = "form-control" })
    <br />
    @Html.Label("Kalkış Zamanı")
    @Html.TextBoxFor(x => x.KalkisZamani, new { @class = "form-control" })
    <br />
    @Html.Label("Varış Zamanı")
    @Html.TextBoxFor(x => x.VarisZamani, new { @class = "form-control" })
    <br />
    @Html.Label("Tahmini Süre")
    @Html.TextBoxFor(x => x.TahminiSure, new { @class = "form-control" })
    <br />
    @Html.Label("Bilet Tutar")
    @Html.TextBoxFor(x => x.BiletTutar, new { @class = "form-control" })
    <br />
    @Html.Label("Personel")
    @Html.DropDownListFor(x => x.Calisanlarid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Tanim")
    @Html.DropDownListFor(x => x.Guzergahid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.Label("Otobüs")
    @Html.DropDownListFor(x => x.Otobuslerid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.Label("Nereden")
    @Html.DropDownListFor(x => x.KalkisSehirid, (List<SelectListItem>)ViewBag.dgr4, new { @class = "form-control" })
    <br />
    @Html.Label("Nereye")
    @Html.DropDownListFor(x => x.VarisSehirid, (List<SelectListItem>)ViewBag.dgr5, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>

</form>



