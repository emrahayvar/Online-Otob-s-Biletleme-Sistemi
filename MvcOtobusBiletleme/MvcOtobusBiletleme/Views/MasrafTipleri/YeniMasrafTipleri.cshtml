@model MvcOtobusBiletleme.Models.Siniflar.MasrafTipleri
@{
    ViewBag.Title = "YeniMasrafTipleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Masraf Tipi Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.MasrafAd)
    @Html.TextBoxFor(x => x.MasrafAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>

</form>
