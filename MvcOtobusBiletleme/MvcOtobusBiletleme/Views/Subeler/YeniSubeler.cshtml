@model MvcOtobusBiletleme.Models.Siniflar.Subeler
@{
    ViewBag.Title = "YeniSubeler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Şube Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.SubeAd)
    @Html.TextBoxFor(x => x.SubeAd, new { @class = "form-control" })
    <br />
    @Html.Label("Şehir")
    @Html.DropDownListFor(x => x.Sehirlerid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>

</form>
